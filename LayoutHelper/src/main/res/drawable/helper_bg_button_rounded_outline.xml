<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorHelperRipple">

    <item android:id="@android:id/mask">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorHelperBlue"/>
            <stroke
                android:color="@color/colorHelperBlue"
                android:width="@dimen/helper_view_line_thickness"/>
            <corners android:radius="@dimen/helper_button_corner_rounded"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:color="@color/colorHelperBlue"
                android:width="@dimen/helper_view_line_thickness"/>
            <corners android:radius="@dimen/helper_button_corner_rounded"/>
        </shape>
    </item>

</ripple>